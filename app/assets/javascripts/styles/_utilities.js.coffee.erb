primaryColor = '#00bdb3'
textColor = '#212121'
borderColor = '#e0e0e0'

Styles.Utils ||=
  fontSize: 14
  textColor: textColor
  primaryColor: primaryColor
  primaryColorLight: '#4dcec7'
  backgroundColorLight: '#eeeeee'
  borderStyle: "1px solid #{borderColor}"
  borderBoxShadow: '0 2px 4px rgba(0, 0, 0, 0.2)'

  verticalAlignForContainer:
    display: 'flex'
    alignItems: 'center'

  verticalAlignChildren:
    position: 'absolute'
    top: '50%'
    transform: 'translateY(-50%)'

  middleAlignChildren:
    position: 'absolute'
    top: '50%'
    left: '50%'
    transform: 'translateX(-50%) translateY(-50%)'

  focusBorder:
    ':focus':
      borderColor: primaryColor
      outline: 0

  materialPaper:
    transistion: 'all 450ms cubic-bezier(0.23, 1, 0.32, 1) 0ms'
    boxShadow: '0 1px 6px rgba(0, 0, 0, 0.12), 0 1px 4px rgba(0, 0, 0, 0.24)'

  spriteImageSource: (position) ->
    spriteUrl = "<%= asset_url('assets-sprite.png') %>"
    "url('#{spriteUrl}') #{position} no-repeat"

  getNumberOfColumnsToDisplay: ->
    width = $(window).width()
    if width <= 414
      1
    else if width < 600
      2
    else
      3
